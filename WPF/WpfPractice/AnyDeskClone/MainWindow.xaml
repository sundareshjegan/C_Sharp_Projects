<Window x:Class="AnyDeskClone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnyDeskClone"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowState="Maximized">
    <Grid>
        <Button Name="ConnectButton" Content="Connect to Server" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="30" Click="ConnectButton_Click"/>
        <Image Name="ScreenImage" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,40,0,0"
               MouseDown="ScreenImage_MouseDown" MouseMove="ScreenImage_MouseMove" MouseUp="ScreenImage_MouseUp"/>

    </Grid>
</Window>
